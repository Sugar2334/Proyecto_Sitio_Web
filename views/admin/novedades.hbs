<div class="wallpaper">
    <div class="container">
        <div class="container__sesion">
            <div class="row">
                <div class="col">
                    <p class="text-right" style="padding-left: 65% ; color:white; padding-top: 20px">
                        <span>Bienvenido {{usuario}} !!! </span>
                        <a href="/admin/login/logout" class="btn btn-danger">Cerrar Sesi√≥n <i
                                class="fas fa-sign-out-alt"></i></a>
                    </p>
                </div>
            </div>

        </div>
    </div>


    <div class="row">
        <div class="col-7" style="margin-top: -5px">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-5 text-right">
            <a href="/admin/novedades/agregarElemento" class="btn btn-success"><i class="fas fa-plus"></i> Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="table-responsive">
                <table class="table table-bordered table-condensed" style="color:white">
                    <thead class="text-center">
                        <tr class="table-dark">
                            <th scope="col">#</th>
                            <th scope="col">Titulo</th>
                            <th scope="col">Imagen</th>
                            <th scope="col" class="text-right">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each novedades}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{titulo}}</td>
                            <td>{{{imagen}}}</td>
                            <td class="text-right">
                                <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i
                                        class="fas fa-pencil-alt"></i></a>
                                <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i
                                        class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

            </div>
        </div>
    </div>

</div>